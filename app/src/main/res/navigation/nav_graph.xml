<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_search">

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.gptrecipeapp.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_rec"
        android:name="com.example.gptrecipeapp.ui.rec.RecFragment"
        android:label="@string/title_rec"
        tools:layout="@layout/fragment_rec" >
        <action
            android:id="@+id/action_navigation_rec_to_recIngredientsFragment"
            app:destination="@id/navigation_rec_Ingredients" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.gptrecipeapp.ui.favorite.FavoriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/navigation_rec_Ingredients"
        android:name="com.example.gptrecipeapp.ui.recingredients.RecIngredientsFragment"
        android:label="RecIngredientsFragment"
        tools:layout="@layout/fragment_rec_ingredients"/>
</navigation>